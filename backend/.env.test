# Test Environment Configuration
# Used by pytest when running the test suite

# Testing flag (automatically set by conftest.py)
TESTING=true

# Test Database (in-memory SQLite for speed)
# Note: conftest.py uses in-memory SQLite by default
# For production-like tests, use: postgresql://localhost:5432/test_db
DATABASE_URL=sqlite:///:memory:

# Authentication Secret (test-only secret)
BETTER_AUTH_SECRET=test-secret-key-min-32-chars-long-for-testing-purposes

# OpenAI API (mocked in tests - key not used)
OPENAI_API_KEY=sk-test-mock-key-not-used-in-tests

# CORS Origins (for test client)
CORS_ORIGINS=http://localhost:3000,http://testserver

# Application Configuration
ENVIRONMENT=test
LOG_LEVEL=WARNING

# Rate Limiting (higher limits for tests)
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=100

# MCP Server (not used in unit tests)
MCP_SERVER_URL=http://localhost:8000
